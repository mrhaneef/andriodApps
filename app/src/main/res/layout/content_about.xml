<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:context="com.usvb.mobile.andriod.mhaneef.myp.activity.AboutActivity"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="62dp"
        android:layout_height="19dp"
        android:layout_marginTop="28dp"
        android:text="About"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="354dp"
        android:layout_height="185dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:text="Please make dua for Umma \n\n DC = Days Completed \n F = Fajr \n Z = Zuhr \n A = Asr \n M = Magrib \n I = Isha \n History is maintain for 30 Days \n"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/about_close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:onClick="onClickCloseSettings"
        android:text="Close"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>